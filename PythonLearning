weight = int(input("Weight: "))
unit = input('(L)bs or (K)g:')
if unit.upper()=="L":
    converted = int(weight*0.45)
    print(f"You are {converted} kilograms.")
else:
    converted = int(weight/0.45)
    print(f"You are {converted} pounds.")

